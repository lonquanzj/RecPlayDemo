<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐欣赏" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="K歌模式" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/xiaoguozhonglei"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="效果种类" />
   	    
   	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
        
			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <Button
		            android:id="@+id/xiaoguo1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="效果1" />
		        <Button
		            android:id="@+id/xiaoguo2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="效果2" />
		        <Button
		            android:id="@+id/xiaoguo3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="效果3" />
			</LinearLayout>
		     
			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <Button
		            android:id="@+id/xiaoguo4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="效果4" />
		
		        <Button
		            android:id="@+id/xiaoguo5"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="效果5" />
		
		        <Button
		            android:id="@+id/xiaoguo6"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="效果6" />
			</LinearLayout>
		</LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
   	    
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
        
        	<TextView
	            android:id="@+id/xiaoguozhonglei"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="效果强度" />

        	<SeekBar
        	    android:id="@+id/xiaoguoqiangdubar"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1" />
        	
        </LinearLayout>
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
        	
        	<TextView
	            android:id="@+id/erjiyinliang"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="耳机音量" />

        	<SeekBar
        	    android:id="@+id/erjiyinliangbar"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1" />
	        	
	   </LinearLayout>   
	   
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        		
        	<TextView
	            android:id="@+id/huatongyinliang"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="话筒音量" />

        	<SeekBar
        	    android:id="@+id/huatongyinliangbar"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1" />
        </LinearLayout>
        
	</LinearLayout>	    

	 <LinearLayout
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:orientation="horizontal" >
	   	    
	     <Button
            android:id="@+id/shanbiswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闪避开关" />
        <Button
            android:id="@+id/recstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rec开始" />
        <Button
            android:id="@+id/openrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放录音" />
	        
	</LinearLayout>	 
	
</LinearLayout>